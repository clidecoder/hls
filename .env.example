# HSL Environment Variables
# Copy this file to .env and customize with your actual values

# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_WEBHOOK_SECRET=your_super_secure_webhook_secret_here_32_chars_min

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Server Configuration Overrides
HSL_HOST=0.0.0.0
HSL_PORT=8000
HSL_WEBHOOK_PATH=/webhook

# Optional: Feature Overrides
HSL_DEBUG=false
HSL_SKIP_SIGNATURE_VALIDATION=false

# Optional: Performance Tuning
HSL_MAX_CONCURRENT_WEBHOOKS=10
HSL_CLAUDE_TIMEOUT=60
HSL_GITHUB_TIMEOUT=30